<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/similar_app_api_card_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/similar_app_api_free_or_paid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/primaryDarkColor"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="FREE"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toTopOf="@+id/similar_app_api_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/similar_app_api_application_name"
                app:layout_constraintTop_toTopOf="@+id/similar_app_api_application_name" />

            <TextView
                android:id="@+id/similar_app_api_developer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="right"
                android:lines="2"
                android:minLines="1"
                android:text="-By Someone"
                android:textColor="@android:color/background_dark"
                app:layout_constraintBottom_toBottomOf="@+id/similar_app_api_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/similar_app_api_rating_text"
                app:layout_constraintTop_toBottomOf="@+id/similar_app_api_description" />

            <TextView
                android:id="@+id/similar_app_api_rating_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="22dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="4.5"
                android:textColor="@android:color/background_dark"
                app:layout_constraintBottom_toBottomOf="@+id/similar_app_api_icon"
                app:layout_constraintEnd_toStartOf="@+id/similar_app_api_developer"
                app:layout_constraintStart_toEndOf="@+id/similar_app_api_rating"
                app:layout_constraintTop_toBottomOf="@+id/similar_app_api_description" />

            <ImageView
                android:id="@+id/similar_app_api_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="22dp"
                app:layout_constraintBottom_toBottomOf="@+id/similar_app_api_icon"
                app:layout_constraintEnd_toStartOf="@+id/similar_app_api_rating_text"
                app:layout_constraintStart_toEndOf="@+id/similar_app_api_icon"
                app:layout_constraintTop_toBottomOf="@+id/similar_app_api_description"
                app:srcCompat="@drawable/ic_baseline_star_24" />

            <TextView
                android:id="@+id/similar_app_api_description"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:lines="2"
                android:minLines="1"
                android:singleLine="false"
                android:text="some short description of application (summary of app)"
                app:layout_constraintBottom_toTopOf="@+id/similar_app_api_developer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/similar_app_api_icon"
                app:layout_constraintTop_toBottomOf="@+id/similar_app_api_application_name" />

            <TextView
                android:id="@+id/similar_app_api_application_name"
                android:layout_width="237dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:lines="2"
                android:minLines="1"
                android:text="Application Name"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/similar_app_api_description"
                app:layout_constraintEnd_toStartOf="@+id/similar_app_api_free_or_paid"
                app:layout_constraintStart_toEndOf="@+id/similar_app_api_icon"
                app:layout_constraintTop_toTopOf="@+id/similar_app_api_icon" />

            <ImageView
                android:id="@+id/similar_app_api_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_launcher_foreground" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>